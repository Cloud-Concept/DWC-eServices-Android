<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dwc_launcher"/>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="240dp"
        android:background="@color/dwc_blue_color"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/btn_newNOC"
            android:layout_width="@dimen/default_window_width"
            android:layout_height="@dimen/default_window_width"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_marginBottom="@dimen/item_margin"
            android:clickable="true"
            android:padding="@dimen/default_panel_icon_padding"
            android:src="@mipmap/noc_service_image" />

        <ImageView
            android:id="@+id/btn_newCompanyNOC"
            android:layout_width="@dimen/default_window_width"
            android:layout_height="@dimen/default_window_width"
            android:layout_marginBottom="@dimen/item_margin"
            android:clickable="true"
            android:padding="@dimen/default_panel_icon_padding"
            android:src="@mipmap/company_noc" />

        <ImageView
            android:id="@+id/btn_newCard"
            android:layout_width="@dimen/default_window_width"
            android:layout_height="@dimen/default_window_width"
            android:layout_marginBottom="@dimen/item_margin"
            android:clickable="true"
            android:padding="@dimen/default_panel_icon_padding"
            android:src="@mipmap/new_card" />

        <ImageView
            android:id="@+id/btn_notifications"
            android:layout_width="@dimen/default_window_width"
            android:layout_height="@dimen/default_window_width"
            android:layout_marginBottom="@dimen/item_margin"
            android:clickable="true"
            android:padding="@dimen/default_panel_icon_padding"
            android:src="@mipmap/notification_image1" />
    </LinearLayout>

</LinearLayout>